{
    "compilerOptions": {
        "baseUrl": "./src",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "esnext",
        "target": "es6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "test/lib.test.js"
    ]
}
